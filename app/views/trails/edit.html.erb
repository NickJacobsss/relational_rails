<%= form_with url: "/trails/#{@trail.id}", method: :patch, local:true do |form|%>
<p><%= form.label :name, "Trail Name:"  %>
<%= form.text_field :name %></p>
<p><%= form.label :length, "Length: (Miles)"  %>
<%= form.text_field :length %></p>
<p><%= form.label :hikable, "Hikeable: True/False"  %>
<%= form.text_field :hikable %></p>
<p><%= form.submit "Submit" %></p>
<% end %>
